.char-card(style="text-align:left;" class="char-card-{{charCard.model.colors.length>1?'m':charCard.model.colors[0]}}" ng-class="charCard.size?'char-card-print-'+charCard.size:null")
  .char-card-stage
    .starting-height
    div(style="position:relative;height:4.75%")
      .card-title
        .card-title-top-pad
        .card-title-text {{charCard.model.name}}
    .card-image
      div(ng-show="charCard.model.avatar" style="height:100%;width:100%;background-size:cover;background-position:center center;background-image:url({{charCard.model.avatar.dataUrl}});")
      //-div(ng-hide="charCard.model.avatar" style="color:#999;margin-top:35%;text-align:center;") DROP IMAGE HERE
    .card-body
      div(style="height:.67%")
      .card-type-wrapper(style="text-align:left;")
        //-color symbols
        span(ng-repeat="color in charCard.model.colors" style="display:inline-block;")
          div(style="position:relative;font-size:70%;text-align:center;line-height:0;")
            span(style="position:absolute;width:100%;color:black;left:1.5%;z-index:10;")
              i.mi(class="mi-{{color}}")
          i.aotp.aotp-hexagon(class="aotp-hexagon-{{color}}")
        .card-type-title(style="display:inline-block;white-space:nowrap;")
          span(ng-hide="charCard.model.colors.length") &nbsp;&nbsp;
          |{{charCard.model.category}}
          |&nbsp;
          span(style="display:inline-block;padding-top:0;vertical-align:middle;width:6%;text-align:center")
            div(class="cardTypeSep") -
          |&nbsp;
          |{{charCard.model.type}}
        //-colorless space keeper
        span(ng-hide="charCard.model.colors.length" style="display:inline-block;visibility:hidden")
          div(style="position:relative;font-size:70%;text-align:center;line-height:0;")
            span(style="position:absolute;width:100%;color:black;left:1.5%;z-index:10;")
              i.mi(class="mi-b")
          i.aotp.aotp-hexagon(class="aotp-hexagon-{{color}}")
      .figure-wrap(style="position:relative;")
        i(ng-show="charCard.model.putSymbolOnFigure" ng-class="charCard.model.symbolClass" class="symbolClass")
        div(ng-show="charCard.model.figure" style="height:100%;width:100%;background-size:cover;background-position:center center;background-image:url({{charCard.model.figure.dataUrl}});")
        //-div(ng-hide="charCard.model.figure" style="color:#999;margin-top:40%;text-align:center;font-size:80%;") DROP IMAGE HERE
      .stat-box.life-box(ng-class="{'life-box-sm':charCard.model.attack>9}")
        .stat-label(style="line-height:0;") LIFE
        .life-box-value {{charCard.model.life||'?'}}
      .stat-box.move-box(style="display:inline-block;left:7.5%;")
        .stat-label.move-box-text MOVE
        .move-box-value {{charCard.model.move||'?'}}
      .stat-box.range-box(style="display:inline-block;left:7.5%;")
        .stat-label.range-box-text RANGE
        .range-box-value {{charCard.model.range||'?'}}
      .stat-box.attack-box
        span(style="position:relative;vertical-align:top")
          span.attack-box-text(ng-class="{'attack-box-text-sm':charCard.model.attack>9}") {{charCard.model.attack||'?'}}
        i.aotp.aotp-attack
      .stat-box.defense-box
        span(style="position:relative;vertical-align:top")
          span.defense-box-text(ng-class="{'defense-box-text-sm':charCard.model.defense>9}") {{charCard.model.defense||'?'}}
        i.aotp.aotp-defense
      div(style="position:relative;height:0;")
        div(style="position:absolute;margin-top:120.5%;width:97.15%;text-align:right;")
          i.aotp.aotp-hexagon(style="position:relative;color:#333;font-size:100%;text-align:center;")
            span(class="seriesIcon")
              i(ng-class="charCard.series.symbolClass||'mi mi-planeswalk'")
      .card-abilities(ng-class="[charCard.series.abilitiesClass,{'card-abilities-sm':charCard.getAbilitiesLength()>700}]")
        .card-ability(ng-repeat="ability in charCard.model.abilityArray")
          strong.card-ability-title {{ability.title|uppercase}}
          .card-ability-body(mtg-symbolize="ability.body|lineReturnAsBr")
      .card-attributes
        div(style="float:right")
          |COST&nbsp;&nbsp;{{charCard.model.cost.value}}
          span(ng-show="charCard.model.cost.per" style="font-size:.77em;") &nbsp;{{charCard.model.cost.per}}
        div {{charCard.model.height.name|uppercase}} {{charCard.model.height.value}}
      .card-footer
        div(style="float:right;margin-right:2.5%;margin-top:1.5%;" ng-bind-html="charCard.series.copyRight|trustAsHtml")
        div(style="margin-left:2.5%;")
          i(ng-class="charCard.model.artist.iconClass" style="font-size:220%;vertical-align:-17%")
          |&nbsp;&nbsp;&nbsp;&nbsp;
          |{{charCard.model.artist.title}}
